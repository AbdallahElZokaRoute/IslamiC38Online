<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sebha_head"
        app:layout_constraintBottom_toTopOf="@id/sebha_body"
        app:layout_constraintEnd_toEndOf="@id/sebha_body"
        app:layout_constraintStart_toStartOf="@id/sebha_body"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sebha_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp" />

    <ImageView
        android:id="@+id/sebha_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sebha_body"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/tasbeh_counter_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sebha_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:fontFamily="sans-serif-black"
        android:text="عدد التسبيحات"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tasbeh_counter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tasbeh_counter_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/tasbeh_text_shape"
        android:fontFamily="sans-serif-black"
        android:padding="15dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/zekr_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tasbeh_counter"
        tools:text="سبحان الله"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/tasbeh_text_shape"
        android:fontFamily="sans-serif-black"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textSize="24sp" />

</androidx.constraintlayout.widget.ConstraintLayout>