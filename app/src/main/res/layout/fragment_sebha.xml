<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/text_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اسلامي"
        android:textSize="30sp"
        android:padding="10dp"
        android:fontFamily="@font/elmessiri_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/sebha"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/khatem_eltasbeh_color"
        android:adjustViewBounds="true"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toBottomOf="@+id/text_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/txt_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="عدد التسبيحات"
        android:fontFamily="@font/elmessiri_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sebha"
        />
    <TextView
        android:id="@+id/edit_counter"
        android:layout_width="69dp"
        android:layout_height="81dp"
        style="@style/btn_counter_bg"
        android:alpha=".7"
        android:text="0"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/koufibd"
        app:layout_constraintTop_toBottomOf="@id/txt_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView

        android:id="@+id/txt_theker"
        android:layout_width="137dp"
        android:layout_height="51dp"
        android:text="سبحان الله"
        android:textSize="25sp"
        android:padding="9dp"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_theker"
        style="@style/btn_thker_bg"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/koufibd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_counter"
        />



</androidx.constraintlayout.widget.ConstraintLayout>