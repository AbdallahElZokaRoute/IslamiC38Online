<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_head_sebha"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/head_of_seb7a"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        />
    <ImageView
        android:id="@+id/iv_body_sebha"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".2"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/iv_head_sebha"
        android:src="@drawable/body_of_seb7a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_num_of_tasbeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_body_sebha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/num_of_tasbeh"
        android:textStyle="normal"
        android:textSize="22sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_num_of_tasbeh"
        app:layout_constraintStart_toStartOf="@id/tv_num_of_tasbeh"
        app:layout_constraintEnd_toEndOf="@id/tv_num_of_tasbeh"
        android:background="@drawable/counter_bg"
        tools:text="0"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/tv_words_tasbeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="سبحان الله"
        android:layout_marginTop="20dp"
        android:background="@drawable/counter_bg"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>