<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/profile_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:gravity="center"
        android:padding="12dp"
        android:text="Profile"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/settings_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:gravity="center"
        android:padding="12dp"
        android:text="Settings"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/sebha_text_view"
        app:layout_constraintStart_toEndOf="@id/profile_text_view"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/sebha_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:gravity="center"
        android:padding="12dp"
        android:text="Sebha"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/settings_text_view"
        app:layout_constraintTop_toTopOf="parent" />
    <!--
        ViewGroup->
     -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>